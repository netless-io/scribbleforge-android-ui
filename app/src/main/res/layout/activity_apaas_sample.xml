<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.agora.board.sample.MainActivity">

    <FrameLayout
        android:id="@+id/board_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#cccccc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/ext_op_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/fcr_board_divider_width_4"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp"
            android:showDividers="middle">

            <Button
                android:id="@+id/viewMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="视角修改"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="权限更改"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/openBoard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="开启"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/closeBoard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="关闭"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/destroyBoard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="销毁"
                android:textAllCaps="false" />
        </LinearLayout>
    </HorizontalScrollView>

    <io.agora.board.sample.component.FgsPageIndicatorLayout
        android:id="@+id/page_indicator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ext_op_container" />

    <io.agora.board.sample.component.WhiteboardElementAttributesLayout
        android:id="@+id/whiteboard_element_attributes_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page_indicator_layout"
        tools:visibility="visible" />

    <io.agora.board.sample.page.apaas.FcrWhiteboardControlComponent
        android:id="@+id/whiteboard_controller_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_background"
        android:padding="4dp"
        android:text="1223"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
