<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/element_attributes_content_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_stroke_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stroke" />

        <LinearLayout
            android:id="@+id/layout_stroke_color_palette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/fcr_board_divider_width_10"
            android:orientation="horizontal"
            android:showDividers="middle">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#4CAF50" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#2196F3" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#F44336" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#9E9E9E" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_fill_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fill" />

        <LinearLayout
            android:id="@+id/layout_fill_color_palette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/fcr_board_divider_width_10"
            android:orientation="horizontal"
            android:showDividers="middle">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#4CAF50" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#2196F3" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#F44336" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#9E9E9E" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_stroke_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="line width" />

        <SeekBar
            android:id="@+id/stroke_width_slider"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:max="20"
            android:min="1" />
    </LinearLayout>

    <!-- Dash Array Section -->
    <LinearLayout
        android:id="@+id/layout_dash_array"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dash_array_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="line style" />

        <LinearLayout
            android:id="@+id/layout_dash_array_palette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/fcr_board_divider_width_10"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageView
                android:id="@+id/dash_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/element_attributes_item_bg"
                android:padding="4dp"
                android:src="@drawable/ic_dash_1" />

            <ImageView
                android:id="@+id/dash_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/element_attributes_item_bg"
                android:padding="4dp"
                android:src="@drawable/ic_dash_2" />

            <ImageView
                android:id="@+id/dash_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/element_attributes_item_bg"
                android:padding="4dp"
                android:src="@drawable/ic_dash_3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_font_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="font-size" />

        <SeekBar
            android:id="@+id/font_size_slider"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:max="50"
            android:min="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_arrow_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="arrow-style" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/fcr_board_divider_width_10"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageView
                android:id="@+id/iv_arrow_style_head"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/element_attributes_item_bg"
                android:padding="4dp"
                android:src="@drawable/ic_arrow_left" />

            <ImageView
                android:id="@+id/iv_arrow_style_tail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/element_attributes_item_bg"
                android:padding="4dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
