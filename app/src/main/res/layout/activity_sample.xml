<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.agora.board.sample.MainActivity">

    <FrameLayout
        android:id="@+id/board_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <HorizontalScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/fcr_board_divider_width_4"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp"
            android:showDividers="middle">

            <Button
                android:id="@+id/joinRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Room"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/launchWhiteboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Board"
                android:textAllCaps="false" />
        </LinearLayout>
    </HorizontalScrollView>

    <io.agora.board.sample.component.FgsPageIndicatorLayout
        android:id="@+id/page_indicator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_view" />

    <HorizontalScrollView
        android:id="@+id/whiteboard_controller_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/whiteboard_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/fcr_board_divider_width_4"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp"
            android:showDividers="middle">

            <Button
                android:id="@+id/stroke_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="stroke"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/curve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="curve"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="elector"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/eraser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="eraser"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="background"
                android:textAllCaps="false" />
        </LinearLayout>
    </HorizontalScrollView>

    <io.agora.board.forge.ui.component.FcrWhiteboardControlLayout
        android:id="@+id/whiteboard_control_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>
