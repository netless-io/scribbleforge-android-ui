<?xml version="1.0" encoding="utf-8"?>
<resources>
    <item name="fcr_view_tag_1" type="id" />
    <declare-styleable name="AvatarView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="name" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="shape" format="enum">
            <enum name="circle" value="1" />
            <enum name="rect" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WaveView">
        <attr name="wv_initialRadius" format="dimension" />
        <attr name="wv_color" format="color" />
        <attr name="wv_speed" format="integer" />
        <attr name="wv_strokeWidth" format="dimension" />
        <attr name="wv_style" format="enum">
            <enum name="stroke" value="1" />
            <enum name="fill" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FcrAudioVolumeView">
        <attr name="backgroundTintColor" format="color" />
        <attr name="progressTintColor" format="color" />
    </declare-styleable>

    <declare-styleable name="FcrBoardStrokeWidthView">
        <attr name="dotColor" format="color" />
        <attr name="dotSize" format="dimension" />
        <attr name="circleColor" format="color" />
        <attr name="circleWidth" format="dimension" />
    </declare-styleable>

    <attr name="fcr_layoutOrientation" format="enum">
        <enum name="horizontal" value="0" />
        <enum name="vertical" value="1" />
    </attr>

    <declare-styleable name="FcrBoardToolBox">
        <attr name="fcr_layoutOrientation" />
    </declare-styleable>

    <declare-styleable name="FcrBoardShapePick">
        <attr name="fcr_layoutOrientation" />
    </declare-styleable>

    <declare-styleable name="FcrBoardColorPickLayout">
        <attr name="fcr_layoutOrientation" />
    </declare-styleable>
</resources>
