<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fcr_board_bg_pick_panel_height"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/fcr_mobile_ui_scene_color_popup_block1"
    app:cardCornerRadius="@dimen/fcr_cornerradius_m"
    app:cardElevation="2dp"
    tools:layout_gravity="center_horizontal"
    tools:parentTag="androidx.cardview.widget.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/fcr_board_scene_downloading_panel_padding_h"
        android:paddingVertical="@dimen/fcr_board_scene_downloading_panel_padding_v">

        <FrameLayout
            android:id="@+id/fl_white_board"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/fcr_board_bg_pick_white_bg"
                android:gravity="center"
                android:text="@string/fcr_board_white_board"
                android:textColor="@color/fcr_ui_scene_ramp_brand9"
                android:textSize="14sp" />

            <FrameLayout
                android:id="@+id/fl_white_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fcr_board_bg_pick_selected_bg"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/fcr_board_bg_pick_white_bg" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/fcr_chooseit"
                    app:tint="@color/fcr_ui_scene_black8" />
            </FrameLayout>

        </FrameLayout>

        <Space
            android:layout_width="4dp"
            android:layout_height="0dp" />

        <FrameLayout
            android:id="@+id/fl_black_board"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/fcr_board_bg_pick_black_bg"
                android:gravity="center"
                android:text="@string/fcr_board_black_board"
                android:textColor="@color/fcr_ui_scene_white10"
                android:textSize="14sp" />

            <FrameLayout
                android:id="@+id/fl_black_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fcr_board_bg_pick_selected_bg"
                tools:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/fcr_board_bg_pick_black_bg" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/fcr_chooseit"
                    app:tint="@color/fcr_ui_scene_white10" />
            </FrameLayout>
        </FrameLayout>

        <Space
            android:layout_width="4dp"
            android:layout_height="0dp" />

        <FrameLayout
            android:id="@+id/fl_green_board"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/fcr_board_bg_pick_green_bg"
                android:gravity="center"
                android:text="@string/fcr_board_green_board"
                android:textColor="@color/fcr_ui_scene_white10"
                android:textSize="14sp" />

            <FrameLayout
                android:id="@+id/fl_green_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fcr_board_bg_pick_selected_bg"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/fcr_board_bg_pick_green_bg" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/fcr_chooseit"
                    app:tint="@color/fcr_ui_scene_white10" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</merge>
