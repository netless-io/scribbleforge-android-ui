<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/fcr_board_toolbox_item_width"
    android:layout_height="@dimen/fcr_board_toolbox_item_height">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/v_background"
        android:layout_width="@dimen/fcr_board_toolbox_item_width"
        android:layout_height="@dimen/fcr_board_toolbox_item_height"
        android:layout_gravity="center"
        android:background="@drawable/fcr_board_tool_bg"
        app:cornerSize="50%" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/fcr_board_icon_width"
        android:layout_height="@dimen/fcr_board_icon_height"
        android:layout_gravity="center"
        android:src="@mipmap/fcr_whiteboard_pen1"
        android:visibility="visible"
        app:tint="@color/fcr_ui_scene_icontext1" />

    <FrameLayout
        android:id="@+id/fl_stroke"
        android:layout_width="@dimen/fcr_board_toolbox_item_width"
        android:layout_height="@dimen/fcr_board_toolbox_item_height"
        android:layout_gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/fcr_board_icon_width"
            android:layout_height="@dimen/fcr_board_icon_height"
            android:layout_gravity="center"
            android:src="@mipmap/fcr_whiteboard_colorshape" />

        <io.agora.board.forge.ui.whiteboard.component.FcrBoardDotView
            android:id="@+id/stroke_dot"
            android:layout_width="@dimen/fcr_board_icon_width"
            android:layout_height="@dimen/fcr_board_icon_height"
            android:layout_gravity="center"
            app:dotColor="@color/fcr_orange6"
            app:dotSize="12dp" />
    </FrameLayout>
</FrameLayout>
